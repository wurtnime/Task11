<Window x:Class="Practical11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Практическая №11" Height="450" Width="600"
        Background="#FFE6F0FF">
    
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Практическая №11" FontSize="20" HorizontalAlignment="Center"/>
        <TextBlock Text="Выберите задание 1-29:" Margin="0,10"/>
        <TextBox x:Name="TaskNumberBox" Width="100"/>
        <Button x:Name="SolveButton" Content="Решить" Click="SolveButton_Click" Margin="0,10" Width="100"/>

        <ScrollViewer MaxHeight="150" Margin="0,10" MaxWidth="600">
            <TextBlock x:Name="TaskDescriptionText" TextWrapping="Wrap"/>
        </ScrollViewer>

        <StackPanel x:Name="InputPanel" Visibility="Collapsed">
            <TextBlock x:Name="InputDescription" TextWrapping="Wrap" Margin="0,10"/>
            <TextBox x:Name="InputDataBox" Width="200"/>
            <Button x:Name="AnswerButton" Content="Ответ" Click="AnswerButton_Click" Margin="0,10" Width="100"/>
        </StackPanel>

        <TextBlock x:Name="ResultText" FontSize="16" TextWrapping="Wrap" MaxWidth="600"/>
    </StackPanel>
</Window>